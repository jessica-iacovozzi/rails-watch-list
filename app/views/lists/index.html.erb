<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(http://cdn.shopify.com/s/files/1/0087/2506/9860/collections/1_jfR0trcAPT3udktrFkOebA_1200x1200.jpg?v=1566963161);">
  <div class="container">
    <h1>Your favourite movie catalogue</h1>
    <%= link_to 'Create a list', new_list_path, class: "btn btn-flat" %>
  </div>
</div>

<div class="mt-3">
  <% @lists.each do |list| %>
   <% if list.photo.attached? %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 200, crop: :fill %>')">
      <h3><%= link_to list.name, list_path(list), style: 'color:white, text-decoration:none' %></h3>
    </div>
    <% else %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://www.kindpng.com/picc/m/18-189751_movie-placeholder-hd-png-download.png)">
      <h3><%= link_to list.name, list_path(list), style: 'color:white, text-decoration:none' %></h3>
    </div>
    <% end %>
  <% end %>
</div>
